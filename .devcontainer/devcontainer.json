{
	"name": "rust-wasm-node",
	"image": "mcr.microsoft.com/devcontainers/rust:1-1-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"dtsvet.vscode-wasm",
				"vadimcn.vscode-lldb",
				"serayuzgur.crates",
				"tamasfe.even-better-toml",
				"rust-lang.rust-analyzer"
			]
		}
	},
	"containerEnv": {
		"TZ": "Asia/Tokyo"
	},
	"postCreateCommand": "/bin/sh .devcontainer/postCreateCommand.sh"
}